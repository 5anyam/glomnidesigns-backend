{
    "kind": "collectionType",
    "collectionName": "services",
    "info": {
      "singularName": "service",
      "pluralName": "services",
      "displayName": "Service",
      "description": "Interior design services offered by Glomni Designs"
    },
    "options": {
      "draftAndPublish": true
    },
    "pluginOptions": {},
    "attributes": {
      "title": {
        "type": "string",
        "required": true,
        "maxLength": 255
      },
      "slug": {
        "type": "uid",
        "targetField": "title",
        "required": true
      },
      "short_description": {
        "type": "text",
        "required": true,
        "maxLength": 500
      },
      "full_description": {
        "type": "richtext",
        "required": true
      },
      "featured_image": {
        "type": "media",
        "multiple": false,
        "required": true,
        "allowedTypes": ["images"]
      },
      "gallery_images": {
        "type": "media",
        "multiple": true,
        "allowedTypes": ["images"]
      },
      "service_category": {
        "type": "relation",
        "relation": "manyToOne",
        "target": "api::service-category.service-category",
        "inversedBy": "services"
      },
      "starting_price": {
        "type": "decimal",
        "required": false
      },
      "price_range": {
        "type": "string",
        "required": false
      },
      "duration": {
        "type": "string",
        "required": false
      },
      "features": {
        "type": "json",
        "required": false
      },
      "process_steps": {
        "type": "json",
        "required": false
      },
      "is_featured": {
        "type": "boolean",
        "default": false
      },
      "is_popular": {
        "type": "boolean",
        "default": false
      },
      "order_position": {
        "type": "integer",
        "default": 0
      },
      "seo": {
        "type": "component",
        "repeatable": false,
        "component": "shared.seo"
      },
      "meta_title": {
        "type": "string"
      },
      "meta_description": {
        "type": "text"
      }
    }
  }
  