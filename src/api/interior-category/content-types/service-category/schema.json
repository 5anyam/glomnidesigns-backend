{
    "kind": "collectionType",
    "collectionName": "service_categories",
    "info": {
      "singularName": "service-category",
      "pluralName": "service-categories",
      "displayName": "Service Category"
    },
    "options": {
      "draftAndPublish": true
    },
    "attributes": {
      "name": {
        "type": "string",
        "required": true,
        "unique": true
      },
      "slug": {
        "type": "uid",
        "targetField": "name",
        "required": true
      },
      "description": {
        "type": "text"
      },
      "icon": {
        "type": "string"
      },
      "color": {
        "type": "string",
        "default": "#3B82F6"
      },
      "services": {
        "type": "relation",
        "relation": "oneToMany",
        "target": "api::service.service",
        "mappedBy": "service_category"
      },
      "order_position": {
        "type": "integer",
        "default": 0
      }
    }
  }
  