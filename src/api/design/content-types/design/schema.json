{
  "kind": "collectionType",
  "collectionName": "designs",
  "info": {
    "singularName": "design",
    "pluralName": "designs",
    "displayName": "Design"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "maxLength": 60,
      "required": true
    },
    "images": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "description": {
      "type": "text",
      "maxLength": 200,
      "required": true,
      "unique": false
    },
    "area": {
      "type": "string",
      "required": true
    },
    "style": {
      "type": "enumeration",
      "required": true,
      "enum": [
        "modern",
        "traditional",
        "contemporary",
        "minimalist",
        "luxury"
      ]
    },
    "completion_time": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "is_featured": {
      "type": "boolean",
      "default": false
    },
    "tags": {
      "type": "json"
    },
    "categories": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::category.category",
      "inversedBy": "designs"
    },
    "featured_image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    }
  }
}
